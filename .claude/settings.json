{
  "permissions": {
    "allow": [
      "Bash(python manage.py check:*)",
      "Bash(python manage.py migrate:*)",
      "Bash(python manage.py makemigrations:*)",
      "Bash(pytest:*)",
      "Bash(uv run pytest:*)",
      "Bash(inv ruff:*)",
      "Bash(ruff:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(uv pip list:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(rg:*)"
    ]
  },
  "enableAllProjectMcpServers": false,
  "env": {
    "MAX_THINKING_TOKENS": "32000"
  },
   "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/scripts/bootstrap.sh"
          }
        ]
      }
    ]
  }
}
